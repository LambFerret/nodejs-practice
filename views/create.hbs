

<form action="/community/create" method="post">
<div style="margin: 10px;">
   <select name="Pictureid" id="Pictureid">
        {{#each image}}
        <option value="{{this.Up_Img_Nm}}">{{this.Up_Img_Nm}}</option>
        {{/each}}
    </select>
</div>
    

    <div class="d-flex justify-content-center">
