<input type="button" value="확인" onClick="showAndroidToast('{{id}}')">

<script type="text/javascript">
    function showAndroidToast(toast) {
        Android.AppConnection(toast);
    }
    function comfirmAlert(id) {
        if (confirm("정말 삭제하시겠습니까?")) {
            options = {
                method: 'delete'
            }
            fetch('/restapi/member?user=' + id, options).then(location.replace("/"))
        }
    }
</script>