<form action="/profile/{{id}}" method="post">
    <select name="before" id="before">
        {{#each beforeImgs}}
        <option value="{{this.Up_Img_Nm}}">{{this.Up_Img_Nm}}</option>
        {{/each}}
    </select>
    <input type="submit" value="변환하기" id="transform">

</form>
<br>
<br>
