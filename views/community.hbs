
<div class="text-center" style="margin: 30px;">
<div class="btn-group" role="group" aria-label="Basic radio toggle button group" style="padding: 10px; " >
  <input type="radio" class="btn-check" name="season" id="all" onclick="check(this)" autocomplete="off"  checked="checked">
  <label class="btn btn-outline-primary" for="btnradio1" style="background-color: #606F76; border-color: #606F76; color: white;" >All</label>

  <input type="radio" class="btn-check" name="season" id="spring" onclick="check(this)" autocomplete="off">
  <label class="btn btn-outline-primary" for="btnradio2" style="border-color: #606F76; color:#606F76;">Spring</label>

  <input type="radio" class="btn-check" name="season" id="summer" onclick="check(this)" autocomplete="off">
  <label class="btn btn-outline-primary" for="btnradio3" style="border-color: #606F76; color:#606F76;">Summer</label>

  <input type="radio" class="btn-check" name="season" id="autumn" onclick="check(this)" autocomplete="off">
  <label class="btn btn-outline-primary" for="btnradio3" style="border-color: #606F76; color:#606F76;">Autumn</label>

  <input type="radio" class="btn-check" name="season" id="winter" onclick="check(this)" autocomplete="off">
  <label class="btn btn-outline-primary" for="btnradio3" style="border-color: #606F76; color:#606F76;">Winter</label>
</div>


<div style="padding:15px;">
    <button type="button" class="btn btn-outline btn-sm" style="background-color: #9C9584;" onclick="location.href='/community/create'; "><img src="/icons/pen.png" width="15px" align="center"><a style="color: white"> Create</a></button>
</div>
</div>

<div class="d-flex justify-content-center">
<div class="row row-cols-1 row-cols-md-2 d-flex justify-content-center" style="width: 30rem; "> 
    {{#each data}}
    <div class="col" id="{{this.Post_Type}}inBoard" onclick="location.href='/community/post/{{this.PostID}}'" style="max-width: 12rem;padding:5px;">
        <div class="card border border-secondary rounded" style="height: 25rem;">
        <img src="/converts/{{this.PostID}}" class="card-img-top" alt={{this.PostID}}>
        <div class="card-body">
            <h5 class="card-title" onclick="event.cancelBubble=true; location.href='/profile/{{this.UserID}}';">{{this.UserID}}</h5>
            <p class="card-text" name="post_text">{{this.Post_Text}}</p>
            <p class="card-text" style="font-size: 15px;"><img src="/icons/view.png" alt="post_like" width="15px">  {{this.View_Count}}</p>
            <p class="card-text" style="font-size: 15px;"><img src="/icons/heart_after.png" alt="post_like" width="15px">  {{this.Like_Count}}</p>
            <p class="card-text" style="font-size: 15px;"><img src="/icons/comments.png" alt="post_like" width="15px">  {{this.Comment_Count}}</p>
            <p class="card-text"><small class="text-muted">{{this.Post_Time}}</small></p>
        </div>
        </div>
    </div>
    {{/each}}
  </div>
  </div>

<style>
    .btn-outline-primary:hover { 
        border-color: #606F76; 
        background-color: #606F76; 
        color: white !important;
    }
</style>

<script>
    function check(here){
        const checkbox = document.getElementsByName("season");
        var season = here.id
        checkbox.forEach((i)=>{
          //  if (!(i.id == all)) {document.getElementById(i.id+"inBoard").style.display = "none"}
          //  if (i.id == season) {document.getElementById(i.id+"inBoard").style.display = "block"}
            i.checked = false;
        })
        here.checked = true;
    }
    var domtext = document.getElementsByName('post_text')
    domtext.forEach(element=>{
    element.innerText = view(element.innerText)
    })
    function view(content) {
        if(content.length >= 40){
            content = content.slice(0, 40) + " ..."
            return content
        }
        else {return content}
    }
</script>