<p>{{message}}</p>
<form action="/login/process" method="post">
    <div>
        <div>
            아이디 :
            <input type="text" name="id" id="id">
        </div>
        <div>
            비번 :
            <input type="password" name="pwd" id="pwd">
        </div>
        <div>
            <input type="submit" value="로그인" onclick="ConnectApp('로그인 되었습니다.')">
        </div>
    </div>
</form>

<script type="text/javascript">
{{#if isLoggined}}
    function ConnectApp(message) {
        Android.AppConnection(message);
    }
{{/if}}
</script>